<div class="container">

  <div class = "row">
    <div class="col-md-8 text-center">
      <h1>Dev Match Community</h1>
      <p>Welcome to the Dev Match community. Users must fill out a profile in order to be visible in the community.</p>
    </div>
  </div>

  <% @users.each do |user| %>
    <% if user.profile %>
      <ul>
        <div class="well col-md-8 row <%= cycle('white-bg', '') %>">
          <div class="col-md-2 text-center">
            <% if user.profile.avatar %>
              <%= link_to user do %>
              <%= image_tag user.profile.avatar.url(:thumb), class: 'user-index-avatar' %>
            <% end %>
        </div>
          
        <div class="col-md-4 text-left">
          <%= link_to user do %>
            <h2><%= user.profile.first_name %> <%= user.profile.last_name %></h2>
          <% end %>
          
          <p>
            <%= user.profile.job_title %> 
            <% if user.plan_id == 2 %>
              <span class="label label-success">PRO</span>
            <% elsif user.plan_id == 1 %>
              <span class="label label-danger">Cheapo</span>
            <% end %>
          </p>
        </div>
        
      </ul>
    <% end %>
  <% end %>
    <% end %>

</div>
</div>
